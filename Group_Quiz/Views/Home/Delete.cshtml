@model Group_Quiz.Models.Question
@{
    ViewData["Title"] = "Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>
<div class="container mt-5">
    <h1>Delete Question</h1>
    <p>Are you sure you want to delete this question?</p>
    <div class="question-card-dash d-flex justify-content-between align-items-center mb-3">
        <span>@Model.QuestionText</span>
    </div>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="QuestionId" />
        <a href="@Url.Action("Dashboard")" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>