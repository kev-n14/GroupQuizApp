@model Group_Quiz.Models.ResultViewModel
@{
    ViewData["Title"] = "Result";
    Layout = "~/Views/Shared/_Layout.cshtml";

    double scorePercentage = (double)Model.Score / Model.TotalPossibleScore * 100;
    bool isPassing = scorePercentage >= 50;
}
<div class="bg-image">
<div class="container result-container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    @if (isPassing)
                    {
                        <h2 class="mb-4">Congratulations!</h2>
                        <img src="~/images/result-trophy.png" alt="Congratulations" class="img-fluid mb-4" style="max-width: 200px;">
                        <p class="lead">Great job! You've passed the quiz!</p>
                    }
                    else
                    {
                        
                            <img src="~/images/better_luck.png" alt="Try Again" class="img-fluid mb-4" style="max-width: 200px;">
                        <p class="lead">Don't give up! Keep practicing and you'll improve.</p>
                    }

                    <h3>Your Score: @Model.Score out of @Model.TotalPossibleScore</h3>
                    <p>Percentage: @scorePercentage.ToString("0.##")%</p>

                    <div class="score-details mt-4">
                        <div>
                            <p>Total questions</p>
                            <h4>@Model.TotalQuestions</h4>
                        </div>
                        <div>
                            <p>Points earned</p>
                            <h4>@Model.Score</h4>  
                        </div>
                        <div>
                            <p>Total possible points</p>
                            <h4>@Model.TotalPossibleScore</h4>
                        </div>
                    </div>

                    <div class="mt-4">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-custom mb-2 rounded-pill px-5 font-weight-bold">Back to Home</a>
                            <a href="@Url.Action("Quiz", "Home")" class="btn  btn-secondary mb-2 rounded-pill px-5 font-weight-bold">Try Again</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
