
@model List<Group_Quiz.Models.Question>
@{
    ViewData["Title"] = "Quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">@ViewData["Title"]</h1>
<div class="container vh-100 d-flex justify-content-center align-items-center">
    @foreach (var question in Model)
    {
    <div class="question-card">
        <div class="text-center mb-4">
            <p>Question: @question.QuestionId of @Model.Count</p>
        </div>
        <div class="mb-4">
            <h3 class="text-center">@question.QuestionText</h3>
        </div>
        <div class="list-group">
            @foreach(var answer in question.Answers)
            {
            <div class="list-group-item option border p-3 my-2" data-correct="">@answer.Text</div>
                }
        </div>
        <div class="d-flex justify-content-between align-items-center mt-4">
            <button type="button" class="btn btn-primary">Previous</button>
            <button type="button" class="btn btn-primary">Next</button>
        </div>
    </div>
    }
</div>
@section Scripts{
    <script>
        
//Event listener
    </script>
}