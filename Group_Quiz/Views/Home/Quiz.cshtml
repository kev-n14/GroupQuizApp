@{
    ViewData["Title"] = "Quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center">@ViewData["Title"]</h1>
<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="question-card">
        <div class="text-center mb-4">
            <p>Question: 1 of 20</p>
        </div>
        <div class="mb-4">
            <h3 class="text-center">Question Goes Here?</h3>
        </div>
        <div class="list-group">
            <div class="list-group-item option border p-3 my-2">A) Option 1</div>
            <div class="list-group-item option border p-3 my-2">B) Option 2</div>
            <div class="list-group-item option border p-3 my-2">C) Option 3</div>
            <div class="list-group-item option border p-3 my-2">D) Option 4</div>
        </div>
        <div class="d-flex justify-content-between align-items-center mt-4">
            <button type="button" class="btn btn-primary">Previous</button>
            <button type="button" class="btn btn-primary">Next</button>
        </div>
    </div>
</div>
