<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BrainWave Quiz</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        /*Nav Bar*/
        .navbar-brand {
            display: flex;
            justify-content: center;
            width: 100%;
        }

        .navbar-brand img {
            margin-right: 0; 
        }
   
        /*index page*/
        .gradient-bg {
            width: 100%;
            max-width: 600px;
            padding: 2rem;
            border: 1px solid #000;
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            background: linear-gradient(to top right, #CE93D8, #7B1FA2);
            color: #fff;
        }
        /*Dashboard page*/
        .question-card-dash {
            border: 1px solid #ddd;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 1rem;
        }
        /*Quiz Page*/
        .question-card {
            width: 100%;
            max-width: 600px;
            padding: 2rem;
            border: 1px solid #000;
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

        .option {
            cursor: pointer;
        }

        .option:hover {
            background-color: #f1f1f1;
        }
        /*All pages*/
        .btn-default {
            background: rgba(108, 88, 179, 0.75);
            border: 2px solid rgba(108, 89, 179, 0.75);
        }
        .btn {
            border-radius: 40px;
        }
        .btn-default:hover {
            color: rgba(108, 88, 179, 0.75);
            background: transparent;
            transition: all 0.3s ease 0s;
            border: 2px solid rgba(108, 89, 179, 0.75);
        }
        .btn-cancel {
            border-radius: 40px;
        }
        .btn-cancel:hover {
            color: rgba(108, 88, 179, 0.75);
            background: transparent;
            transition: all 0.3s ease 0s;
            border: 2px solid rgb(192, 192, 192);
        }

        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #f8f9fa; /* Adjust background color as needed */
            text-align: center;
            padding: 10px 0; /* Add padding to adjust footer height */
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                
                <div class="container d-flex justify-content-between">
                    <div class="d-flex justify-content-start w-33">
                        <a class="navbar-brand" href="@Url.Action("Index")">
                            <img src="~/images/BrainBuster.png" width="100" height="100" class="d-inline-block align-top rounded"
                                 alt="">
                        </a>
                    </div>
                    <div class="d-flex justify-content-center w-33">
                        <a class="navbar-brand" href="@Url.Action("Index")">
                            <h1> BrainWave Quiz</h1>
                        </a>
                    </div>
                    <div class="d-flex justify-content-end w-33">
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index")">Home</a>
                                </li>
                                <!--<li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Quiz")">Play Quiz</a>
                                </li>-->
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Dashboard")">Create Quiz</a>
                                </li>
                            </ul>
                        </div>
                    </div>
               
                </div>
            </nav>
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <footer class="border-top footer text-muted">
            <div class="container">
                This Website was developed by 
            </div>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka6K4BqP7YW5tL6Nz15C9x4D1uO//3SBH2A9dk0DLCa/lLMCxHTfMf5X+E/L7gDB" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
