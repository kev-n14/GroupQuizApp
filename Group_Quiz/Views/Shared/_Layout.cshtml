<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Big Quiz</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        /*index page*/
        .gradient-bg {
            background: linear-gradient(to top right, #CE93D8, #7B1FA2);
            height: 100vh;
            /* Ensure it covers the full viewport height */
            width: 100%;
        }

        .card-custom {
            width: 24rem;
            height: 24rem;
        }
        /*Create Page*/
        .question-card {
            width: 30rem;
            height: 30rem;
        }

        .bg-option {
            background-color: #CE93D8;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light ">
                <a class="navbar-brand" href="#">Quiz App</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse " id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Quiz")">Play Quiz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Create")">Create Quiz</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - The Big Quiz
            </div>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka6K4BqP7YW5tL6Nz15C9x4D1uO//3SBH2A9dk0DLCa/lLMCxHTfMf5X+E/L7gDB" crossorigin="anonymous"></script>
</body>
</html>
